<header class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-5">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center">
        <%= link_to root_path, class: "text-xl font-bold text-gray-900 hover:text-gray-700" do %>
          Betterboxd
        <% end %>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <%= link_to "Movies", "#", class: "text-gray-600 hover:text-gray-900" %>
        <%= link_to "Reviews", "#", class: "text-gray-600 hover:text-gray-900" %>
        <%= link_to "Lists", "#", class: "text-gray-600 hover:text-gray-900" %>
      </nav>

      <!-- User Menu -->
      <div class="flex items-center space-x-4">
        <% if Current.user %>
          <!-- Logged in user menu -->
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-600">
              Hello, <%= Current.user.first_name || Current.user.email_address %>
            </span>
            <%= button_to "Log out", session_path, method: :delete, 
                class: "text-sm bg-gray-100 hover:bg-gray-200 px-3 py-2 rounded-md text-gray-700" %>
          </div>
        <% else %>
          <!-- Guest user menu -->
          <div class="flex items-center space-x-3">
            <%= link_to "Sign In", new_session_path, 
                class: "text-sm text-gray-600 hover:text-gray-900" %>
            <%= link_to "Sign Up", new_register_path, 
                class: "text-sm bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md" %>
          </div>
        <% end %>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="text-gray-600 hover:text-gray-900">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
