<header class="bg-gray-950/65 px-5">
  <div class="flex items-center justify-between container max-w-4xl h-18 mx-auto">
    <%= link_to root_path, class: "flex items-center" do %>
      <div class="relative h-5 w-14">
        <div class="bg-orange-400 mix-blend-lighten w-5 h-5 rounded-full absolute top-0 left-0"></div>
        <div class="bg-green-400 mix-blend-lighten w-5 h-5 rounded-full absolute top-0 left-4"></div>
        <div class="bg-cyan-400 mix-blend-lighten w-5 h-5 rounded-full absolute top-0 left-8"></div>
      </div>
      <span class="text-3xl text-white font-bold">
        Betterboxd
      </span>
    <% end %>

    <nav class="hidden md:flex items-center space-x-8">
      <%= link_to "Movies", movies_path, class: "header-link" %>
      <%= link_to "Lists", lists_path, class: "header-link" %>
      <%= link_to "Members", members_path, class: "header-link" %>
    </nav>

    <%= render 'application/user_menu' %>
  </div>
</header>
