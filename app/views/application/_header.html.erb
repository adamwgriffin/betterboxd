<header class="bg-gray-950/65">
  <div class="flex items-center justify-between h-18 container mx-auto px-5">
    <!-- Logo -->
    <div class="flex items-center">
      <div class="relative h-5 w-14">
        <div class="bg-orange-400 mix-blend-lighten w-5 h-5 rounded-full absolute top-0 left-0"></div>
        <div class="bg-green-400 mix-blend-lighten w-5 h-5 rounded-full absolute top-0 left-4"></div>
        <div class="bg-cyan-400 mix-blend-lighten w-5 h-5 rounded-full absolute top-0 left-8"></div>
      </div>
      <%= link_to root_path, class: "text-3xl text-white font-bold hover:text-gray-400" do %>
        Betterboxd
      <% end %>
    </div>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center space-x-8">
      <%= link_to "Movies", "#", class: "hover:text-gray-400" %>
      <%= link_to "Reviews", "#", class: "hover:text-gray-400" %>
      <%= link_to "Lists", "#", class: "hover:text-gray-400" %>
    </nav>

    <!-- User Menu -->
    <div class="flex items-center space-x-4">
      <% if Current.user %>
        <div class="flex items-center space-x-4">
          <span class="text-sm">
            Hello, <%= Current.user.first_name %>
          </span>
          <%= button_to "Log out",
            session_path,
            method: :delete, 
            class: "text-sm bg-gray-100 hover:bg-gray-200 px-3 py-2 rounded-md
            text-gray-700"
          %>
        </div>
      <% else %>
        <div class="flex items-center space-x-3">
          <%= link_to "Sign In",
            new_session_path, 
            class: "text-sm hover:text-gray-400"
          %>
          <%= link_to "Sign Up",
            new_register_path, 
            class: "text-sm bg-blue-500 hover:bg-blue-600 text-white px-4 py-2
            rounded-md"
          %>
        </div>
      <% end %>
    </div>
  </div>
</header>
