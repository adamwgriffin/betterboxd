<div class="flex items-center space-x-4">
  <% if Current.user %>
    <div class="relative group">
      <button class="flex items-center space-x-2 text-sm hover:text-gray-50 cursor-pointer">
        <span><%= Current.user.first_name %></span>
        <svg
          class="w-4 h-4 transition-transform group-hover:rotate-180"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      
      <div
        class="absolute right-0 mt-2 w-48 bg-gray-400 rounded-md shadow-lg
          border border-gray-700 opacity-0 invisible group-hover:opacity-100
          group-hover:visible transition-all duration-200 z-50"
      >
        <div class="py-1">
          <%= link_to "#", class: "block px-4 py-2 text-sm text-gray-700
            hover:bg-gray-500 hover:text-gray-50" do %>
            Profile
          <% end %>
          <%= link_to "#", class: "block px-4 py-2 text-sm text-gray-700
            hover:bg-gray-500 hover:text-gray-50" do %>
            Settings
          <% end %>
          <%= link_to "#", class: "block px-4 py-2 text-sm text-gray-700
            hover:bg-gray-500 hover:text-gray-50" do %>
            My Lists
          <% end %>
          <div class="border-t border-gray-500/50"></div>
          <%= button_to "Log out",
            session_path,
            method: :delete, 
            class: "cursor-pointer w-full text-left block px-4 py-2 text-sm text-gray-700
              hover:bg-gray-500 hover:text-gray-50"
          %>
        </div>
      </div>
    </div>
  <% else %>
    <div>
      <%= link_to "Sign In",
        new_session_path, 
        class: "text-sm hover:text-gray-50"
      %>
      /
      <%= link_to "Create Account",
        new_register_path, 
        class: "text-sm hover:text-gray-50"
      %>
    </div>
  <% end %>
</div>
