<div class="flex flex-col gap-4 mx-auto max-w-md">
  <%= tag.div(flash[:alert], class: "text-red-600") if flash[:alert] %>
  <%= tag.div(flash[:notice], class: "text-green-600") if flash[:notice] %>

  <%= form_with url: session_path, class: "flex flex-col gap-4" do |form| %>
    <%= form.text_field :username,
      required: true,
      autofocus: true,
      autocomplete: "username",
      placeholder: "Username",
      value: params[:username],
      class: "border rounded-lg p-2"
    %>

    <%= form.password_field :password,
      required: true,
      autocomplete: "current-password",
      placeholder: "Password",
      maxlength: 72,
      class: "border rounded-lg p-2"
    %>

    <%= form.submit "Sign in", class: "btn btn-primary" %>
  <% end %>

  <div class="flex flex-col gap-2">
    <div>
      <%= link_to "Forgot password?", new_password_path, class: "link" %>
    </div>

    <div>
      Don't have an account?
      <%= link_to "Sign up", new_register_url, class: "link" %>
    </div>
  </div>
</div>
